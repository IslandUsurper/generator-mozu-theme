{
  "configs": {
    "watch": {
      "gruntfile": {
        "files": [
          "Gruntfile.js"
        ],
        "tasks": [
          "newer:jshint:develop"
        ]
      },
      "json": {
        "files": [
          "theme.json",
          "theme-ui.json",
          "labels/*.json"
        ],
        "tasks": [
          "newer:jshint:develop",
          "newer:mozusync:upload"
        ]
      },
      "javascript": {
        "files": [
          "scripts/**/*.js"
        ],
        "tasks": [
          "newer:jshint:develop",
          "mozutheme:quickcompile",
          "newer:mozusync:upload"
        ]
      },
      "sync": {
        "files": [
          "admin/**/*",
          "resources/**/*",
          "packageconfig.xml",
          "stylesheets/**/*",
          "templates/**/*",
          "*thumb.png",
          "*thumb.jpg",
          "!**/*.orig",
          "!.inherited"
        ],
        "tasks": [
          "newer:mozusync:upload"
        ]
      }
    },
    "mozusync": {
      "options": {
        "applicationKey": "<%= mozuconfig.workingApplicationKey %>",
        "context": "<%= mozuconfig %>"
      },
      "upload": {
        "options": {
          "action": "upload",
          "noclobber": true
        },
        "src": [
          "admin/**/*",
          "compiled/**/*",
          "labels/**/*",
          "resources/**/*",
          "packageconfig.xml",
          "scripts/**/*",
          "stylesheets/**/*",
          "templates/**/*",
          "theme.json",
          "*thumb.png",
          "*thumb.jpg",
          "theme-ui.json",
          "!**/*.orig",
          "!.inherited"
        ]
      },
      "del": {
        "options": {
          "action": "delete"
        },
        "src": "<%= mozusync.upload.src %>",
        "remove": []
      },
      "wipe": {
        "options": {
          "action": "deleteAll"
        },
        "src": "<%= mozusync.upload.src %>"
      }
    },
    "mozutheme": {
      "check": {
        "command": "check"
      },
      "compile": {
        "command": "compile"
      },
      "quickcompile": {
        "command": "compile",
        "opts": {
          "skipminification": true
        }
      }
    }
  },
  "tasks": {
    "default": [
      "mozusync:upload",
      "mozutheme:check"
    ]
  },
  "tasksToLoad": [
    "grunt-contrib-jshint",
    "grunt-newer",
    "grunt-mozu-appdev-sync",
    "grunt-contrib-watch",
    "mozu-theme-helpers"
  ],
  "requiredPackages": [
    "grunt",
    "grunt-contrib-copy",
    "grunt-contrib-compress",
    "grunt-contrib-jshint",
    "grunt-contrib-watch",
    "grunt-newer",
    "mozu-theme-helpers",
    "time-grunt",
    "grunt-mozu-appdev-sync"
  ]
}
